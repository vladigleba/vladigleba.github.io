{% render 'layouts/banner',
   title: 'No internet!',
   description: 'Please check your connection and try again.'
%}

<script>
  // redirect to previous page when back online
  const prev = sessionStorage.getItem('offline-prev') || '/';
  window.addEventListener('online', () => {
    window.location.replace(prev);
  });

  // store previous page if not already on /offline/
  if (!window.location.pathname.startsWith('/offline')) {
    sessionStorage.setItem('offline-prev', window.location.pathname);
  }
</script>
