---
layout: layouts/base
pagination:
  data: site.categories  # from site.json
  size: 1
  alias: category
  addAllPagesToCollections: true  # adds to collections.all for sitemap
permalink: '/{{ category | downcase }}/'
eleventyComputed:
  title: '{{ category }}'
  description: '{{ site.categories[category].description }}'
---

{% 
  render 'layouts/banner',
  title: category,
  description: site.categories[category].description,
%}

{%
  render 'layouts/category',
  allPosts: collections.allPosts,
  categoryFilter: category,
  site: site
%}