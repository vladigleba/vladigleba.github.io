---
layout: layouts/base
pagination:
  data: site.categories  # from site.json
  size: 1
  alias: category
  addAllPagesToCollections: true  # adds to collections.all for sitemap
permalink: '/{{ category | downcase }}/'
eleventyComputed:
  title: '{{ category }}'
  description: '{{ site.categories[category] }}'
---

{% render 'layouts/banner',
   title: category,
   description: site.categories[category].description,
   show_blur_bg: true,
   glow_color: site.categories[category].color
%}

{% render 'layouts/cards',
   groupedPosts: collections.groupedPosts,
   categoryFilter: category
%}