<nav aria-label="series navigation">
  <ol class="series-links meta">
    {% for post in series.posts %}
      <li>
        {% if series.current != forloop.index %}
          <a href="{{ post.url }}">{{ post.data.title }}</a> <span>•</span> 
          {{ post.data.length }} min read
        {% else %}
          {{ post.data.title }} <span>•</span> {{ post.data.length }} min read
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>