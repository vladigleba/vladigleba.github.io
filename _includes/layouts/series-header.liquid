<nav aria-label="series navigation">
  <ol class="series-links meta">
    {% for post in series.posts %}
      <li>
        {% if series.current != forloop.index %}
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        {% else %}
          {{ post.data.title }}
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>