---
layout: layouts/base
---

{% if series %} 
  {% assign color = series-names[series]["color"] %}
  {% assign seriesTitle = series-names[series]["title"] %}
{% endif %}

<style>
  .main-nav, .main-nav li:hover { color: white; }
  header h1, main > h2, .tag span { color: {{ color }}; }
  header, .main-nav, .main-nav ul { background-color: {{ color }}; }
  /*blockquote p,*/ .toc li.active { border-left: 4px solid {{ color }}; }
</style>

<article>
  <header>
    <div>
      {% render "layouts/header", 
        title: title,
        description: description,
        category: category,
        length: length,
        isSeries: series, 
        series: seriesInfo, 
        seriesTitle: seriesTitle 
      %}
    </div>
  </header>

  <div class="wrapper">
    {% render "layouts/toc" %}
    <main>
      {{ content }}
      
      {% if next %}
        <p class="next-link meta">
          Read next: <a href="{{ next.url }}" rel="next">{{ next.title }}</a>
        </p>
      {% endif %}
    </main>
  </div>
</article>