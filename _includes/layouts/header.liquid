<h1 class="title">{{ title }}</h1>
<p class="description">{{ description }}</p>
<p class="meta tag">
  {{ category }} <span>•</span>
  {{ length }} min read <span>•</span>
  <b class="post-last-updated">
    Updated <time datetime="{{ updated | toISO }}">{{ updated | toLocal }}</time>
  </b>
</p>

{% if isSeries %}
  <div class="series-links">
    <h2 class="meta series">
      {{ series_title }} <span>•</span>
      {{ series.current }} of {{ series.total }}
    </h2>

    <nav aria-label="Series navigation">
      <ol class="meta">
        {% for post in series.posts %}
          <li>
            <a 
              href="{{ post.url }}" 
              class="series-item" 
              {% if series.current == forloop.index %}
                aria-current="page"
              {% endif %}
            >
              <span class="series-left">
                <span class="number">{{ forloop.index }}</span>
                <span>{{ post.data.title }}</span>
              </span>
              <span class="series-right">
                {{ post.data.length }} min read
              </span>
            </a>
          </li>
        {% endfor %}
      </ol>
    </nav>
  </div>
{% endif %}