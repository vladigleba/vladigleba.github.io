<h1 class="title">{{ title }}</h1>
<p class="description">{{ description }}</p>
<p class="meta tag">
  <span>{{ category }}</span>
  <span>{{ length }} min read</span>
</p>

{% if isSeries %}
  <p class="meta series">
    “{{ series_title }}” Series <span>•</span> Part {{ series.current }} of {{ series.total }}
  </p>

  <nav aria-label="Series navigation">
    <ol class="series-links meta">
      {% for post in series.posts %}
        <li>
          {% if series.current != forloop.index %}
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          {% else %}
            {{ post.data.title }}
          {% endif %}

          <span>•</span> {{ post.data.length }} min read
        </li>
      {% endfor %}
    </ol>
  </nav>
{% endif %}