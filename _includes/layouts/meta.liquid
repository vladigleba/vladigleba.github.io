<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ meta_title }}</title>
<meta name="description" content="{{ meta_description }}">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Literata:ital,opsz,wght@0,7..72,200..900;1,7..72,200..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" fetchpriority="low">

<!-- security headers -->
<meta http-equiv='Content-Security-Policy' content="default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' https://cloud.umami.is; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://bible-api.com https://api-gateway.umami.dev; object-src 'none'; base-uri 'self'; form-action 'self';">
<meta name='referrer' content='strict-origin-when-cross-origin'>
<meta http-equiv='Permissions-Policy' content="geolocation=(), camera=(), microphone=(), payment=()">
<meta http-equiv='X-Content-Type-Options' content='nosniff'>

<!-- social meta tags -->
{% if is_article %}
  <meta property="og:type" content="article">
{% else %}
  <meta property="og:type" content="website">
{% endif %}
<meta property="og:title" content="{{ meta_title }}">
<meta property="og:description" content="{{ meta_description }}">
<meta property="og:url" content="{{ page_url | absoluteUrl }}">
<meta property="og:site_name" content="{{ default_title }}">
<meta property="og:image" content="{{ '/assets/images/social-default.png' | absoluteUrl }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ meta_title }}">
<meta name="twitter:description" content="{{ meta_description }}">
<meta name="twitter:image" content="{{ '/assets/images/social-default.png' | absoluteUrl }}">

<!-- DNS prefetch and preconnect -->


<!-- critical CSS -->
<link href="/styles.css" rel="stylesheet">
<style>
  {% render 'styles/nav.css' %}
  {% render 'styles/banner.css' %}
</style>

<!-- canonical and feeds -->
<link rel="canonical" href="{{ url }}">
<link rel="alternate" type="application/rss+xml" title="RSS" href="/feed.xml">

<!-- icons -->
<link rel="icon" href="/assets/images/favicon.svg" type="image/svg+xml">

<!-- structured data -->
{% if is_article %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "{{ meta_title }}",
      "description": "{{ meta_description }}",
      "author": {
        "@type": "Person",
        "name": "{{ author }}"
      },
      "datePublished": "{{ date | toISO }}",
      "dateModified": "{{ updated | toISO }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ page_url | absoluteUrl }}"
      }
    }
  </script>
{% else %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "url": "{{ page_url | absoluteUrl }}",
      "name": "{{ meta_title }}",
      "description": "{{ meta_description }}"
    }
  </script>
{% endif %}

<!-- analytics -->
<script>
  if (
    location.hostname !== 'localhost' &&
    location.hostname !== '127.0.0.1' &&
    (!navigator.doNotTrack || navigator.doNotTrack === '0')
  ) {
    var s = document.createElement('script');
    s.defer = true;
    s.setAttribute('data-website-id', 'dd2fe86a-abe1-4240-869c-fbe22064287d');
    s.src = 'https://cloud.umami.is/script.js';
    document.head.appendChild(s);
  }
</script>