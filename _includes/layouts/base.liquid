<!DOCTYPE html>
<html lang="en">
  <head>
    {% if title %}
      {% assign meta_title = title | append: " | " | append: site.title %}
    {% else %}
      {% assign meta_title = site.title %}
    {% endif %}

    {% assign meta_description = description | default: site.description %}
    {% assign is_article = page | isArticle: site.categories %}

    {%
      render 'layouts/meta', 
      default_title: site.title,
      meta_title: meta_title, 
      meta_description: meta_description,
      author: site.author,
      is_article: is_article,
      page_url: page.url,
      url: site.url,
      date: date,
      updated: updated,
    %}
  </head>

  <body id="top">
    <a href="#main-content" class="skip-link">Skip to main content</a>

    {% render 'layouts/nav' %}
   
    <main id="main-content" tabindex="-1">
      {{ content }}
    </main>

    {% render 'layouts/footer' %}

    <script>
      document.body.classList.add('js-enabled');
      if (
        'serviceWorker' in navigator &&
        location.hostname !== 'localhost' &&
        location.hostname !== '127.0.0.1'
      ) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(err => {
            console.warn('Service worker registration failed:', err);
          });
        });
      }
    </script>
    <script src="/assets/js/core.js" defer></script>
  </body>
</html>
