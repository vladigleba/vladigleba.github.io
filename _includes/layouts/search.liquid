<div id="search-container" class="search-container" role="dialog" aria-modal="true" aria-label="Search articles" aria-hidden="true">
  <div class="search-modal">
    <div class="search-input-wrapper">
      <button class="search-back-btn" id="search-back-btn" aria-label="Close search">
        <svg aria-hidden="true">
          <use href="/assets/images/icons.svg#back"></use>
        </svg>
      </button>
      <input 
        id="search-input" 
        type="search" 
        class="search-input" 
        placeholder="Search articles..." 
        autocomplete="off"
        aria-label="Search posts"
      >
    </div>
    <div id="search-results" class="search-results" role="list" aria-live="polite" aria-label="Search results"></div>
  </div>
</div>